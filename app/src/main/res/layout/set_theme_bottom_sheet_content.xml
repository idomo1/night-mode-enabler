<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/standard_bottom_sheet"
            style="@style/ModalBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/set_day_mode"
                    style="@style/BottomSheetText"
                    android:layout_width="match_parent"
                    android:text="@string/set_day_mode"
                    app:drawableStartCompat="@drawable/ic_outline_wb_sunny_24" />

                <TextView
                    android:id="@+id/set_night_mode"
                    style="@style/BottomSheetText"
                    android:layout_width="match_parent"
                    android:text="@string/set_night_mode"
                    app:drawableStartCompat="@drawable/ic_dark_mode_24dp" />

                <TextView
                    android:id="@+id/set_auto_mode"
                    style="@style/BottomSheetText"
                    android:layout_width="match_parent"
                    android:text="@string/set_auto_mode"
                    app:drawableStartCompat="@drawable/ic_outline_autorenew_24" />
            </LinearLayout>

        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>